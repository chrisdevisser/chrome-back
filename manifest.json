{
  "manifest_version": 2,

  "name": "Back Close",
  "description": "Closes a tab when there's nothing to go back to",
  "version": "1.0",

  "permissions": [
      "tabs", "webNavigation", "<all_urls>"
  ],
  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "all_frames": true,
          "run_at": "document_end",
          "js": ["content.js"]
      }
  ],
  "background": {
      "scripts": ["background.js"],
      "persistent": false
  }
}